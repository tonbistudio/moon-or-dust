{
  "name": "tribes",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "pnpm --filter app dev",
    "dev:game-core": "pnpm --filter @tribes/game-core dev",
    "build": "pnpm -r build",
    "build:core": "pnpm --filter @tribes/game-core build",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:core": "vitest run --project game-core",
    "test:e2e": "pnpm --filter app test:e2e",
    "typecheck": "pnpm -r typecheck",
    "lint": "eslint packages --ext .ts,.tsx",
    "lint:fix": "eslint packages --ext .ts,.tsx --fix"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.1.0",
    "typescript": "^5.3.2",
    "vitest": "^1.0.0"
  },
  "packageManager": "pnpm@8.11.0",
  "engines": {
    "node": ">=18.0.0"
  }
}
